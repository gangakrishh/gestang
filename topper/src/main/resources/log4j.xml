<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

  <!-- SERVER_NAME is parameterized to support tomcat & jetty deployments -->
  <!-- See build.properties for options, replaced by the filter during maven build -->

  <appender name="FileAppender" 
    class="org.apache.log4j.DailyRollingFileAppender">
    <param name="DatePattern" value="'.'yyyy-MM-dd" />
    <param name="File" value="${@SERVER_NAME@.home}/logs/topper.log" />
    <param name="Append" value="true" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d %-5p %t [%c] %m%n" />
    </layout>
  </appender>

  <appender name="WebFileAppender" 
    class="org.apache.log4j.DailyRollingFileAppender">
    <param name="DatePattern" value="'.'yyyy-MM-dd" />
    <param name="File" value="${@SERVER_NAME@.home}/logs/topper-web.log" />
    <param name="Append" value="true" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d %-5p %t [%c] %m%n" />
    </layout>
  </appender>

  <appender name="OrmFileAppender" 
    class="org.apache.log4j.DailyRollingFileAppender">
    <param name="DatePattern" value="'.'yyyy-MM-dd" />
    <param name="File" value="${@SERVER_NAME@.home}/logs/topper-orm.log" />
    <param name="Append" value="true" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d %-5p %t [%c] %m%n" />
    </layout>
  </appender>
  
  <category name="org.jostho" additivity="false">
    <priority value="debug" />
    <appender-ref ref="FileAppender" />
  </category>
  
  <category name="org.springframework.web" additivity="false">
    <priority value="debug" />
    <appender-ref ref="WebFileAppender" />
  </category>

  <category name="org.hibernate" additivity="false">
    <priority value="debug" />
    <appender-ref ref="OrmFileAppender" />
  </category>
  
  <root>
    <priority value="warn" />
    <appender-ref ref="FileAppender" />
  </root>

</log4j:configuration>